

@using System.ComponentModel.DataAnnotations
@using Burn_Out.Components.Account
@using Infrastructure.Models
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authentication



@inject SignInManager<ApplicationUser> SignInManager
@inject NavigationManager NavigationManager
@inject ILogger<Login> Logger
@inject IdentityRedirectManager RedirectManager
@inject IHttpClientFactory ClientFactory

<PageTitle>Log in</PageTitle>

<h1>Log in</h1>

<EditForm Model="@Input" OnValidSubmit="LoginUser">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-floating mb-3">
        <InputText @bind-Value="Input.Email" class="form-control" placeholder="Email" />
        <label>Email</label>
        <ValidationMessage For="() => Input.Email" />
    </div>

    <div class="form-floating mb-3">
        <InputText @bind-Value="Input.Password" type="password" class="form-control" placeholder="Password" />
        <label>Password</label>
        <ValidationMessage For="() => Input.Password" />
    </div>

    <div class="checkbox mb-3">
        <label>
            <InputCheckbox @bind-Value="Input.RememberMe" /> Remember me
        </label>
    </div>

    <button type="submit" class="btn btn-primary">Log in</button>
</EditForm>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@code {
    private string? errorMessage;
    private InputModel Input { get; set; } = new();

    private async Task LoginUser()
    {
        try
        {
            if (OperatingSystem.IsWindows() || OperatingSystem.IsLinux() || OperatingSystem.IsMacOS())
            {
                // SERVER MODE → używamy SignInManager
                var result = await SignInManager.PasswordSignInAsync(Input.Email, Input.Password, Input.RememberMe, false);
                if (result.Succeeded)
                {
                    Logger.LogInformation("User logged in (server).");
                    NavigationManager.NavigateTo("/", replace: true);

                }
                else
                {
                    errorMessage = "Invalid login attempt.";
                }
            }
            else
            {
                // WASM MODE → wywołujemy backend
                var client = ClientFactory.CreateClient("ServerAPI");
                var response = await client.PostAsJsonAsync("/login", Input);
                if (response.IsSuccessStatusCode)
                {
                    NavigationManager.NavigateTo("/", forceLoad: true);
                }
                else
                {
                    errorMessage = "Invalid login attempt.";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }

    private sealed class InputModel
    {
        [Required, EmailAddress]
        public string Email { get; set; } = "";

        [Required, DataType(DataType.Password)]
        public string Password { get; set; } = "";

        public bool RememberMe { get; set; }
    }
}
